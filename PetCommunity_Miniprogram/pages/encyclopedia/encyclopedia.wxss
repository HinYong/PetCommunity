/* pages/encyclopedia/encyclopedia.wxss */

page {
  background: #fff !important;
}

.catalog {
  display: flex;
  height: 100%;
}

.catalog .nav {
  width: 162rpx;
}

.catalog .nav .wrap {
  display: flex;
  flex-direction: row;
  height: 120rpx;
  align-items: center;
}

.catalog .nav .item {
  text-align: center;
	padding-top: 35rpx;
	height: 120rpx;
  width: 162rpx;
  color: #666;
  font-size: 28rpx;
  border-left: 6rpx solid #fff;
}

.catalog .nav .item.active {
	display: flex;
  flex-direction: column;
  align-items: center;
  color: #3bd12e;
  font-size: 32rpx;
	border-left: 6rpx solid #3bd12e;
	background-color: #f1f1f1;
}

.catalog .category {
  border-left: 0.8px solid #ebebeb;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 30rpx;
}

.banner {
  display: block;
  width: 100%;
  margin-bottom: 20rpx;
}

.banner .image {
  height: 200rpx;
  width: 100%;
}

.catalog .header {
  padding-bottom: 10rpx;
  margin-bottom: 15rpx;
  text-align: left;
  font-weight: 700;
  color: #333;
  border-bottom: 1rpx solid #d9d9d9;
  font-size: 26rpx;
}

.category .item-wrap {
  display: flex;
  flex-wrap: wrap;
	margin-bottom: 0rpx;
}

.category .item-wrap-2 {
  display: flex;
  flex-wrap: wrap;
	margin-bottom: 20rpx;
	margin-top: 30rpx;
}

.category .item {
  display: block;
  height: 235rpx;
  width: 144rpx;
	margin-right: 47rpx;
	margin-block-end: 20rpx;
}

.category .item.last {
  margin-right: 0;
}

.category .item .icon {
  height: 144rpx;
  width: 144rpx;
}

.category .item .txt {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  height: 90rpx;
  width: 144rpx;
  overflow:hidden;
}

.hot-card {
  position: relative;
  margin: 32rpx 52rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.05);
  height: 320rpx;
}

.hot-name {
  position: absolute;
  top: 36rpx;
  left: 36rpx;
  display: flex;
  align-items: center;
}

.hot-name-line {
  width: 24rpx;
  height: 39rpx;
}

.hot-name-text {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.hot-image-discount {
  position: absolute;
  width: 259rpx;
  height: 188rpx;
  bottom: 0;
  left: 42rpx;
}

.hot-image {
  position: absolute;
  width: 240rpx;
  height: 240rpx;
  right: 36rpx;
  top: 40rpx;
}

.separator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 70rpx 0 30rpx;
}

.separator-line {
  width: 21rpx;
  height: 34rpx;
}

.separator-text {
  margin: 0 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.list {
  display: flex;
  margin: 0 27rpx 0 52rpx;
  justify-content: space-around;
}

.list-item {
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  margin-bottom: 25rpx;
  margin-right: 25rpx;
}

.list-item-image {
  height: 260rpx;
  width: 260rpx;
  margin: 10rpx 20rpx 15rpx;
}

.list-item-title {
  margin-left: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  opacity: 0.5;
}

.list-item-bottom {
  margin: 15rpx 20rpx;
  display: flex;
}

.list-item-bottom-icon {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: 50%;
  color: #34373d;
  font-weight: 900;
  background: #f7e687;
  font-size: 24rpx;
}

.list-item-bottom-price {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
}

.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.VerticalBox{
  display: flex;
}
.VerticalMain{
  background-color: #f1f1f1;
}

