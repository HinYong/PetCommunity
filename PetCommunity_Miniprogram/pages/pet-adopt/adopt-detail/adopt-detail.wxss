/* pages/pet-adopt/adopt-detail/adopt-detail.wxss */

.top {
  background: white;
  padding: 30rpx 30rpx 20rpx;
}

.hot-card {
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.05);
  height: 600rpx;
  padding-top: 40rpx;
  padding-left: 25rpx;
}

.img {
  height: 480rpx;
  width: 480rpx;
  margin-left: 85rpx;
}

.separator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 50rpx 0 30rpx;
}

.separator-line {
  width: 21rpx;
  height: 38rpx;
  margin-top: 6rpx;
}

.separator-text {
  margin: 0 20rpx;
  font-size: 36rpx;
  color: cadetblue;
}

.line {
  background: #e6e6e6;
  height: 1rpx;
  margin-top: 36rpx;
}

.order-block {
  background: #fff;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.05);
  border-radius: 15rpx;
}

.order-card {
  display: flex;
  align-items: center;
  margin-left: 19rpx;
  margin-right: 19rpx;
  padding-top: 23rpx;
  padding-bottom: 23rpx;
}

.order-card:last-child {
  border-bottom: none;
}

.order-image {
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
}

.order-info {
  flex: 1;
  margin-left: 34rpx;
  margin-top: 70rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}

.order-name {
  color: rgba(29, 29, 38, 0.8);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5; /* 指定显示文本的行数 */
  overflow: hidden; /* 超出隐藏 */
  text-overflow: ellipsis; /* 超出部分显示省略号 */
  font-size: medium;
}

.context {
  padding-left: 10rpx;
}

.context .title {
  color: #333;
  font-size: 34rpx;
}

.context .orderinfo {
  display: flex;
  padding-top: 10rpx;
  font-size: 34rpx;
  line-height: 60rpx;
  white-space: pre-wrap;
}

/* 底部栏 */
.opr {
  align-items: center;
  border-top: 4rpx rgb(240, 242, 243) solid;
  padding: 20rpx;
  padding-top: 40rpx;
}

.opr-request {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #000000c9;
  background: #ffcc00a3;
  border-radius: 50rpx;
}