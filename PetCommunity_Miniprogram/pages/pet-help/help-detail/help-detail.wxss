/* pages/pet-help/help-detail/help-detail.wxss */

page {
  background-color: #ffffff;
}

.order-head {
  margin: 40rpx 30rpx 20rpx;
  display: flex;
  align-items: center;
}

.order-head-line {
  width: 21rpx;
  height: 34rpx;
}

.order-head-text {
  margin-left: 10rpx;
  font-size: 30rpx;
  line-height: 33rpx;
  color: rgba(52, 55, 61, 0.8);
}

.order-block {
  margin: 0 26rpx 26rpx;
  background: #fff;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.05);
  border-radius: 13rpx;
}

.order-card {
  display: flex;
  align-items: center;
  margin-left: 19rpx;
  margin-right: 23rpx;
  min-height: 300rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}

.order-card:last-child {
  border-bottom: none;
}

.imgs {
  width: 130rpx;
  height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.imgs image {
  width: 130rpx;
  height: 130rpx;
  display: block;
}

.context {
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.context .title {
  color: #333;
  font-size: 34rpx;
}

.context .orderinfo {
  display: flex;
  padding-top: 10rpx;
  font-size: 32rpx;
  line-height: 40rpx;
}

.context .bottoms {
  display: flex;
  padding-top: 25rpx;
  font-size: 34rpx;
}

/* 求助具体内容 */
.artical-container{
  margin: 0 26rpx 26rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.05);
  border-radius: 13rpx;
  padding: 20rpx 0 50rpx;
}
    
.part-content{
  justify-content: center;
  margin: auto;
}
.part-content-item{
  padding-bottom: 10rpx;
  border-bottom: 5rpx rgb(240, 242, 243) solid ;
}

.help-info{
  width: 95%;
  margin: auto;
  margin-top: 10rpx;
  flex-direction: row;
  justify-content: space-between;
  padding: 7rpx;
}

.help-info-item{
  margin-top: 5rpx;
  font-weight: 500;
  color: #000000a8;
  font-size: 35rpx;
  margin-left: 10rpx;
}

.article-part{
  background-color: burlywood;
}

.part-content-middle{
  width: 95%;
  margin: auto;
  padding: 5rpx 10rpx;
  text-align: center;
}

.acticle-text{
  word-wrap: break-word;
  font-size: 35rpx;
  color: #000000a8;
  display: -webkit-box;
  text-align: left;
  overflow: hidden;
  -webkit-box-orient: vertical;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
  margin-left: 7rpx;
}

.acticle-image{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.show-image{
  width: 200rpx;
  height: 200rpx;
  margin: 7rpx 8rpx 7rpx 2rpx;
}

.show-image image{
  display: inline-block;
  width: 100%;
  height: 100%;
  margin: 5rpx;
  border-radius: 10rpx;
}

.help-post-detail{
  display: block;
}

.help-post-time{
  margin-top: 15rpx;
  display: block;
  float: right;
  font-size: 28rpx;
  color: cadetblue;
}

.publish-time{
  text-align: right;
  margin-top: 20rpx;
  color: #808080c9;
}


/* 底部栏 */
.opr {
  align-items: center;
  border-top: 4rpx rgb(240, 242, 243) solid;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

.opr-cancel {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #000000c9;
  background: #ffcc00a3;
  border-radius: 50rpx;
}