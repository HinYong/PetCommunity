/* pages/community/community.wxss */

page {
  background-color: #ffffff;
}

/* 导航栏 */
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  position: fixed;
  width: 100%;
  z-index: 1024;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #FFCC00;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FFCC00;
}

.empty-list {
  display: flex;
  flex-direction: column;
  margin: 40rpx 30rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.05);
  height: 650px;
  justify-content: center;
  align-items: center;
}

/* 博客具体内容 */
.part-content{
  justify-content: center;
  margin: auto;
}
.part-content-item{
  padding-bottom: 10rpx;
  border-bottom: 5rpx rgb(240, 242, 243) solid ;
}
.blog-user-info{
  width: 90%;
  margin: auto;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 7rpx;
}

.blog-user-photo{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.blog-user-info image{
  width: 100rpx;
  border-radius: 50%;
}

.blog-user-detail{
  display: flex;
  flex-direction: column;
  flex-grow: 2;
  justify-content: space-between;
  margin-left: 10rpx;
}

.blog-user-name{
  margin-top: 20rpx;
  font-weight: 600;
  color: cadetblue;
  font-size: 36rpx;
  margin-left: 10rpx;
}

.blog-user-flag{
  display: flex;
  flex-direction: row;
}

.blog-user-flag view{
  font-weight: 100;
  color: white;
  font-size: 20rpx;
  margin-right: 10rpx;
  padding: 5rpx;
  border-radius: 4rpx;
}

.article-part{
  background-color: burlywood;
}

.part-content-middle{
  width: 88%;
  margin: auto;
  padding: 10rpx;
  text-align: center;
}

.acticle-text{
  word-wrap: break-word;
  font-size: 30rpx;
  display: -webkit-box;
  text-align: left;
  overflow: hidden;
  /* text-align: center; */
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
}

.acticle-image{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.show-image{
  width: 200rpx;
  height: 200rpx;
  margin: 7rpx 8rpx 7rpx 2rpx;
}

.show-image image{
  display: inline-block;
  width: 100%;
  height: 100%;
  margin: 5rpx;
  border-radius: 10rpx;
}

.blog-post-detail{
  display: block;
}

.blog-post-time{
  margin-top: 15rpx;
  display: block;
  float: right;
  font-size: 28rpx;
  color: cadetblue;
}

/* 博客底部栏 */
.bottom-img{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.part-content-bottom{
  height: 52rpx;
  width: 88%;
  display: flex;
  align-content: center;
  margin: auto;
  justify-content: flex-end;
}

.comment{
  margin-left: 20rpx;
  line-height: 52rpx;
}

.like{
  line-height: 52rpx;
}

.star{
  margin-left: 20rpx;
  line-height: 52rpx;
}

.num{
  padding-left: 6rpx;
  font-size: 24rpx;
}

/* 发帖区域 */
/* 底部栏 */
.opr {
  position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    border-top: 5rpx rgb(240, 242, 243) solid;
    padding: 20rpx;
    padding-bottom: 40rpx;
    background: white;
}

.opr-publish {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #000000c9;
  background: #ffcc00a3;
  border-radius: 50rpx;
}