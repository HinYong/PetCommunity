/* pages/order/order.wxss */

.container{
  margin-top: 120rpx;
}

.order-head {
  margin: 40rpx 30rpx 20rpx;
  display: flex;
  align-items: center;
}

.order-head-line {
  width: 21rpx;
  height: 34rpx;
}

.order-head-text {
  margin-left: 10rpx;
  font-size: 30rpx;
  line-height: 33rpx;
  color: rgba(52, 55, 61, 0.8);
}

.order-block {
  margin: 0 26rpx 26rpx;
  background: #fff;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.05);
  border-radius: 13rpx;
  padding-bottom: 30rpx;
}

.order-card {
  display: flex;
  align-items: center;
  margin-left: 19rpx;
  margin-right: 23rpx;
  height: 300rpx;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}

.order-image {
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
}

.order-info {
  flex: 1;
  margin-left: 34rpx;
  margin-top: 80rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}

.order-name {
  color: rgba(29, 29, 38, 0.8);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5; /* 指定显示文本的行数 */
  overflow: hidden; /* 超出隐藏 */
  text-overflow: ellipsis; /* 超出部分显示省略号 */
  font-size: medium;
}

.order-price {
  margin-top: 12rpx;
  font-weight: bold;
}

.order-opr {
  flex-shrink: 0;
  margin-left: 25rpx;
  padding-top: 34rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
}

.order-btn {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #F5E069;
  border-radius: 12rpx;
  text-align: center;
  margin-bottom: 15rpx;
  margin-right: 18rpx;
  font-size: medium;
}

.order-btn-2 {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: medium;
  background: #F5E069;
  border-radius: 12rpx;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 0rpx;
  margin-left: 460rpx;
}

.order-count {
  margin-top: 157rpx;
  line-height: 40rpx;
  font-weight: bold;
  text-align: right;
  padding-right: 15rpx;
}

.order-count-2 {
  margin-top: 105rpx;
  line-height: 40rpx;
  font-weight: bold;
  text-align: right;
  padding-right: 15rpx;
}

.order-count-3 {
  margin-top: 120rpx;
  line-height: 40rpx;
  font-weight: bold;
  text-align: right;
  padding-right: 15rpx;
}

.empty-orderlist {
  display: flex;
  flex-direction: column;
  margin: 40rpx 30rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.05);
  height: 300rpx;
  justify-content: center;
  align-items: center;
}

.item-total-price {
  margin-top: 15rpx;
  line-height: 40rpx;
  font-weight: bold;
  text-align: right;
  padding-right: 15rpx;
}

.totalprice {
  margin-top: 33rpx;
  line-height: 40rpx;
  font-weight: bold;
  text-align: right;
  padding-right: 36rpx;
  padding-bottom: 0rpx;
  font-size: medium;
}

.navbar{
  flex: none;
  display: flex;
  background: #fff;
  position: fixed;
  width: 100%;
  top: 0px;
  z-index: 1024;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #FFCC00;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FFCC00;
}

.return-status{
  margin-left: 60rpx;
  margin-bottom: 20rpx;
  color: #FFCC00;
}
