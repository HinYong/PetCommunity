/* pages/order/order-return/order-return.wxss */

.btn-area{
  margin-top: 80rpx;
  margin-bottom: 60rpx;
}

button.submit{
  margin-left: 100rpx; 
  margin-right: 100rpx; 
  margin-bottom: 30rpx;
  padding:20rpx, 60rpx; 
  border: none;
  border-radius: 50rpx; 
  background: #3bd12e;
  color: #f8f8f8;
}
button.reset{
  margin-left: 100rpx; 
  margin-right: 100rpx; 
  padding:20rpx, 60rpx; 
  border: none;
  border-radius: 50rpx; 
  background: #d12e2e;
  color: #f8f8f8;
}

.order-head {
  margin: 40rpx 30rpx 20rpx;
  display: flex;
  align-items: center;
}

.order-head-line {
  width: 21rpx;
  height: 34rpx;
}

.order-head-text {
  margin-left: 10rpx;
  font-size: 30rpx;
  line-height: 33rpx;
  color: rgba(52, 55, 61, 0.8);
}


.order-block {
  background: #fff;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.05);
  border-radius: 13rpx;
}

.order-card {
  display: flex;
  align-items: center;
  margin-left: 19rpx;
  margin-right: 23rpx;
  height: 300rpx;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}

.order-card:last-child {
  border-bottom: none;
}

.order-image {
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
}

.order-info {
  flex: 1;
  padding: 34rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}

.order-name {
  color: rgba(29, 29, 38, 0.8);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5; /* 指定显示文本的行数 */
  overflow: hidden; /* 超出隐藏 */
  text-overflow: ellipsis; /* 超出部分显示省略号 */
}

.order-price {
  margin-top: 12rpx;
  font-weight: bold;
}

.order-opr {
  flex-shrink: 0;
  margin-left: 50rpx;
  padding-top: 34rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
}

.order-btn {
  width: 200rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: #F5E069;
  border-radius: 10rpx;
  text-align: center;
  margin-bottom: 15rpx;
  margin-right: 18rpx;
}

.order-count {
  margin-top: 157rpx;
  line-height: 40rpx;
  font-weight: bold;
  text-align: right;
  padding-right: 15rpx;
}

.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  background: white;
  padding-left: 24rpx;
  margin-top: 200rpx;
}

.bottom-pay {
  height: 100rpx;
  width: 200rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  background: #3bd12e;
  color: #f8f8f8;
  font-weight: bold;
}

.bottom-pay.canpay {
  color: #34373d
}

.bottom-text {
  flex: 1;
  text-align: right;
  opacity: 0.5;
  margin-right: 5rpx;
}

.bottom-price {
  font-size: 30rpx;
  line-height: 42rpx;
  margin-right: 20rpx;
}

.product-list {
  position: absolute;
  left: 0;
  right: 0;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  margin-bottom: 90rpx;
}

.imgs {
  width: 130rpx;
  height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.imgs image {
  width: 130rpx;
  height: 130rpx;
  display: block;
}

.context {
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.context .title {
  color: #333;
  font-size: 34rpx;
}

.context .orderinfo {
  display: flex;
  padding-top: 10rpx;
  font-size: 32rpx;
  line-height: 40rpx;
}

.context .bottoms {
  display: flex;
  padding-top: 25rpx;
  font-size: 34rpx;
}

.create-add{
  font-size: large;
  margin-left: 10rpx;
}

.totalprice {
  margin-top: 33rpx;
  line-height: 40rpx;
  font-weight: bold;
  text-align: right;
  padding-right: 36rpx;
  padding-bottom: 0rpx;
  font-size: medium;
}

.order-btn-2 {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: medium;
  background: #F5E069;
  border-radius: 12rpx;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 0rpx;
  margin-left: 460rpx;
}

.order-count-2 {
  margin-top: 105rpx;
  line-height: 40rpx;
  font-weight: bold;
  text-align: right;
  padding-right: 15rpx;
}

.item-total-price {
  margin-top: 15rpx;
  line-height: 40rpx;
  font-weight: bold;
  text-align: right;
  padding-right: 15rpx;
}