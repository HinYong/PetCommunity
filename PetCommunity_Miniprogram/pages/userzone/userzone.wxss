/* pages/userzone/userzone.wxss */

page {
  background-color: #ffffff;
}

/* 用户信息模块 */
.userbg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.user-info {
  width: 100%;
  height: 350rpx;
  margin: 0rpx auto;
  position: fixed;
  overflow: hidden;
  z-index: 1024;
  top: 0px;
  padding: 40rpx;
  display: block;
}

.user-top{
  display: flex;
}

.user-head {
  flex-shrink: 0;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  margin-top: 30rpx;
}

.user-txt{
  display: block;
  margin-left: 40rpx;
  margin-top: 42rpx;
}

.user-name {
  flex: 1;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 40rpx;
  color: white;
}

.user-public_id {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  margin-top: 8rpx;
  color: white;
}

.user-bottom{
  margin-top: 30rpx;
  display: flex;
}

.user-bottom-item{
  display: block;
}

.user-bottom-title {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 32rpx;
  color: white;
}

.user-bottom-number {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  margin-top: 8rpx;
  color: white;
  text-align: center;
}

.follow-btn {
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: medium;
  border-radius: 40rpx;
  text-align: center;
  margin-top: 50rpx;
  margin-bottom: 0rpx;
  margin-left: 490rpx;
  position: fixed;
  background: #e93a1ef2;
  color: aliceblue;
}

.follow-btn-2 {
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: medium;
  border-radius: 40rpx;
  text-align: center;
  margin-top: 50rpx;
  margin-bottom: 0rpx;
  margin-left: 490rpx;
  position: fixed;
  background: #a9a9a973;
  color: aliceblue;
}

/* 导航栏 */
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  position: relative;
  width: 100%;
  z-index: 1024;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #FFCC00;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FFCC00;
}

.empty-list {
  display: flex;
  flex-direction: column;
  margin: 40rpx 30rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.05);
  height: 950rpx;
  justify-content: center;
  align-items: center;
}

/* 博客具体内容 */
.part-content{
  justify-content: center;
  margin: auto;
}
.part-content-item{
  padding-bottom: 10rpx;
  border-bottom: 5rpx rgb(240, 242, 243) solid ;
}
.blog-user-info{
  width: 90%;
  margin: auto;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 7rpx;
}

.blog-user-photo{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.blog-user-info image{
  width: 100rpx;
  border-radius: 50%;
}

.blog-user-detail{
  display: flex;
  flex-direction: column;
  flex-grow: 2;
  justify-content: space-between;
  margin-left: 10rpx;
}

.blog-user-name{
  margin-top: 20rpx;
  font-weight: 600;
  color: cadetblue;
  font-size: 36rpx;
  margin-left: 10rpx;
}

.blog-user-flag{
  display: flex;
  flex-direction: row;
}

.blog-user-flag view{
  font-weight: 100;
  color: white;
  font-size: 20rpx;
  margin-right: 10rpx;
  padding: 5rpx;
  border-radius: 4rpx;
}

.article-part{
  background-color: burlywood;
}

.part-content-middle{
  width: 88%;
  margin: auto;
  padding: 10rpx;
  text-align: center;
}

.acticle-text{
  word-wrap: break-word;
  font-size: 30rpx;
  display: -webkit-box;
  text-align: left;
  overflow: hidden;
  /* text-align: center; */
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
}

.acticle-image{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.show-image{
  width: 200rpx;
  height: 200rpx;
  margin: 7rpx 8rpx 7rpx 2rpx;
}

.show-image image{
  display: inline-block;
  width: 100%;
  height: 100%;
  margin: 5rpx;
  border-radius: 10rpx;
}

.blog-post-detail{
  display: block;
}

.blog-post-time{
  margin-top: 15rpx;
  display: block;
  float: right;
  font-size: 28rpx;
  color: cadetblue;
}

/* 博客底部栏 */
.bottom-img{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.part-content-bottom{
  height: 52rpx;
  width: 88%;
  display: flex;
  align-content: center;
  margin: auto;
  justify-content: flex-end;
}

.comment{
  margin-left: 20rpx;
  line-height: 52rpx;
}

.like{
  line-height: 52rpx;
}

.star{
  margin-left: 20rpx;
  line-height: 52rpx;
}

.num{
  padding-left: 6rpx;
  font-size: 24rpx;
}