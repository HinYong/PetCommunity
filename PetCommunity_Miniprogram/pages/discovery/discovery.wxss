/* pages/discovery/discovery.wxss */

page {
  background-color: #ffffff;
}

/* 轮播图 */
.swiper{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.swiper-container{
  width: 90%;
  height: 300rpx;
  margin: 0rpx auto;
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
}

.swiper-item{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  margin-left: 1rpx;
}

.swiper-item>image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.separator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 50rpx 0 40rpx;
}

.separator-line {
  width: 21rpx;
  height: 34rpx;
}

.separator-text {
  margin: 0 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 分类 */
.part_container{
  width: 100%;
  background-color: rgb(251, 251, 251);
  /* width: 90%; */
  border-radius: 11%;
  margin: auto;
}

/* 分类标签 */
.part-nav{
  width: 90%;
  height: 240rpx;
  margin: 0rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  white-space: nowrap;
  padding-left: 7rpx;
  padding-top: 30rpx;
}

::-webkit-scrollbar {
  
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
.part-nav-item{
  display: inline-block;
  width: 124rpx;
  font-size: 20rpx;
  text-align: center;
  color: #aaa;
  margin-right: 60rpx;
}
.part-nav-icon{
  width: 120rpx;
  height: 120rpx;
}
.part-nav-text{
  display: block;
  margin-top: 6rpx;
  font-size: 28rpx;
  color: chocolate;
}

/* 博客具体内容 */
.part-content{
  justify-content: center;
  margin: auto;
}
.part-content-item{
  padding-bottom: 10rpx;
  border-bottom: 5rpx rgb(240, 242, 243) solid ;
}
.blog-user-info{
  width: 90%;
  margin: auto;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 7rpx;
}

.blog-user-photo{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.blog-user-info image{
  width: 100rpx;
  border-radius: 50%;
}

.blog-user-detail{
  display: flex;
  flex-direction: column;
  flex-grow: 2;
  justify-content: space-between;
  margin-left: 10rpx;
}

.blog-user-name{
  margin-top: 20rpx;
  font-weight: 600;
  color: cadetblue;
  font-size: 36rpx;
  margin-left: 10rpx;
}

.blog-user-flag{
  display: flex;
  flex-direction: row;
}

.blog-user-flag view{
  font-weight: 100;
  color: white;
  font-size: 20rpx;
  margin-right: 10rpx;
  padding: 5rpx;
  border-radius: 4rpx;
}

.article-part{
  background-color: burlywood;
}

.part-content-middle{
  width: 88%;
  margin: auto;
  padding: 10rpx;
  text-align: center;
}

.acticle-text{
  word-wrap: break-word;
  font-size: 30rpx;
  display: -webkit-box;
  text-align: left;
  overflow: hidden;
  /* text-align: center; */
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
}

.acticle-image{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.show-image{
  width: 200rpx;
  height: 200rpx;
  margin: 7rpx 8rpx 7rpx 2rpx;
}

.show-image image{
  display: inline-block;
  width: 100%;
  height: 100%;
  margin: 5rpx;
  border-radius: 10rpx;
}

.blog-post-detail{
  display: block;
}

.blog-post-time{
  margin-top: 15rpx;
  display: block;
  float: right;
  font-size: 28rpx;
  color: cadetblue;
}

/* 博客底部栏 */
.bottom-img{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.part-content-bottom{
  height: 52rpx;
  width: 88%;
  display: flex;
  align-content: center;
  margin: auto;
  justify-content: flex-end;
}

.comment{
  margin-left: 20rpx;
  line-height: 52rpx;
}

.like{
  line-height: 52rpx;
}

.star{
  margin-left: 20rpx;
  line-height: 52rpx;
}

.num{
  padding-left: 6rpx;
  font-size: 24rpx;
}
